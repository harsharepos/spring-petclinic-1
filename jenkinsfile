pipeline {
    agent { label 'JDK-17'}
    options {
        timeout(time: 30, unit: 'MINUTES')
    }
    triggers {
        poll SCM('* * * * *')
    }
    tolls {
        jdk 'JDK-17'
    }
    stages {
        stage('vcs') {
            steps {
                git url: 'https://github.com/dummyrepos/spring-petclinic-1.git,
                git branch: 'develop'
            }
        }
        stage('build package') {
            steps {
                sh script: 'mvn package'
            }
        }
        stage('reporting') {
            steps {
                archiveArtifacts artifacts: '**/target/spring-petclinic-1-*.jar'
                junit testResults: '**/target/surefire-reports/TEST-*.xml'
            }
        }
    }
}